<h1>Portfolio items</h1>
<%= link_to "Create new item" , new_port_path %>
<br />
<% @portfolio_items.each do |portfolio_item| %>
  <%= link_to portfolio_item.title, port_path(portfolio_item.id) %>
  <p><%= portfolio_item.subtitle %></p>
  <p><%= portfolio_item.body %></p>
  <p><%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil? %></p>
  <%= link_to "edit", edit_port_path(portfolio_item.id) %>
  <%=  link_to 'Destroy', portfolio_item, method: :delete %>
<% end %>
